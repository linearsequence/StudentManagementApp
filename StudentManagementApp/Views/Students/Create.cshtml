@model StudentManagementApp.Models.Student
@{
    ViewData["Title"] = "Create new student";
}

<section class="create update-student">

    <div class="top-banner">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-12">
                    <h1>Create a new student</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-action="Create">
                    <div class="form-group">
                        <label class="form-label">First Name</label>
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Last Name</label>
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Date of birth</label>
                        @Html.TextBoxFor(model => model.DateOfBirth, @"{0:dd\/MM\/yyyy}", new { @class = "datepicker" })
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Year Of Study</label>
                        @Html.DropDownListFor(model => model.YearOfStudy, ViewBag.YearOfStudyOptions as List<SelectListItem>, "Select Year of Study", new { @class = "form-control" })
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="submit-area">
                        <input type="submit" value="Create" class="round-btn" />
                    </div>
                </form>
            </div>
        </div>

        <div class="back-to-list">
            <a asp-action="Index" class="back-to-link">Back to List</a>
        </div>
    </div>

</section>